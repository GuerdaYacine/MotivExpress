{% extends 'base.html.twig' %}

{% block title %}Créer votre lettre de motivation{% endblock %}

{% block body %}
<section class="bg-white dark:bg-gray-900 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white sm:text-4xl">
                Créez votre lettre de motivation
            </h1>
            <p class="mt-3 max-w-2xl mx-auto text-gray-500 dark:text-gray-400 text-lg">
                Remplissez le formulaire ci-dessous pour générer une lettre de motivation personnalisée.
            </p>
        </div>

        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <div class="form-container">
                    {{ form_start(form, {'attr': {'id': 'motiv-form'}}) }}
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.nom.vars.label }}</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600'}}) }}
                            </div>
                            
                            <div>
                                <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.prenom.vars.label }}</label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600'}}) }}
                            </div>
                            
                            <div>
                                <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.entreprise.vars.label }}</label>
                                {{ form_widget(form.entreprise, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600'}}) }}
                            </div>
                            
                            <div>
                                <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.poste.vars.label }}</label>
                                {{ form_widget(form.poste, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600'}}) }}
                            </div>
                        </div>
                        
                        <div class="mt-6">
                            <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.diplome.vars.label }}</label>
                            {{ form_widget(form.diplome, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600', 'rows': 3}}) }}
                        </div>
                        
                        <div class="mt-6">
                            <label class="block text-gray-700 dark:text-gray-300 mb-2">{{ form.annonce.vars.label }}</label>
                            {{ form_widget(form.annonce, {'attr': {'class': 'w-full text-white px-3 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:border-gray-600', 'rows': 5}}) }}
                        </div>
                        
                        <div class="mt-8">
                            {{ form_widget(form.submit, {'attr': {'id': 'submit-btn', 'class': 'w-full text-white transition-all duration-200 cursor-pointer bg-blue-700 hover:bg-blue-800 text-white font-bold py-3 px-4 rounded transition-all duration-200'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {% if message %}
            <div class="mt-10">
                <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
                    <h2 class="text-xl text-center font-semibold text-gray-900 dark:text-white mb-4">Votre lettre de motivation</h2>
                    
                    <div id="letter-content" class="prose max-w-none dark:prose-invert text-gray-800 dark:text-gray-200 whitespace-pre-wrap">
                        {{ message|nl2br }}
                    </div>
                    
                    <div class="mt-6 text-right">
                        <button onclick="copyToClipboard()" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded transition-colors duration-200">
                            <span class="flex items-center">
                                <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                                </svg>
                                Copier
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>

<script>
    function copyToClipboard() {
        const content = document.getElementById('letter-content').innerText;
        navigator.clipboard.writeText(content).then(() => {
            alert('Lettre copiée dans le presse-papier');
        }).catch(err => {
            console.error('Erreur lors de la copie :', err);
        });
    }
</script>
{% endblock %}